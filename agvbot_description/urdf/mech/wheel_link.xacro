<?xml version="1.0"?>
<robot  xmlns:xacro="http://www.ros.org/wiki/xacro">

 <xacro:macro name="wheel_link" params="prefix">
        <link name="${prefix}_wheel_link">
            <visual>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
                <origin xyz="0 0 0" rpy="${pi / 2.0} 0 0" />
                <material name="grey" />
            </visual>
            <collision>
                <geometry>
                    <sphere radius="${wheel_radius}" />
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0" />
            </collision>
            <xacro:cylinder_inertia m="0.50" r="${wheel_radius}" l="${wheel_length}"
                                    o_xyz="0 0 0" o_rpy="${pi / 2.0} 0 0" />
        </link>
    </xacro:macro>
    <xacro:macro name="wheel_joint" params="prefix reflect_x reflect_y">
        <joint name="${prefix}_wheel_joint" type="continuous">
            <parent link="base_link" />
            <child link="${prefix}_wheel_link" />
            <origin xyz="${(reflect_x*base_length) / 2.5} ${reflect_y*(base_width + wheel_length) / 2.0} 0" rpy="0 0 0" />
            <axis xyz="0 1 0" />
        </joint>
    </xacro:macro>

    <xacro:wheel_link prefix="front_left" />
    <xacro:wheel_link prefix="front_right" />
    <xacro:wheel_link prefix="back_left"/>
    <xacro:wheel_link prefix="back_right" />

    <xacro:wheel_joint prefix="front_left" reflect_x="1" reflect_y="1"  />
    <xacro:wheel_joint prefix="front_right" reflect_x="1" reflect_y="-1"  />
    <xacro:wheel_joint prefix="back_left" reflect_x="-1" reflect_y="1"  />
    <xacro:wheel_joint prefix="back_right" reflect_x="-1" reflect_y="-1"  />

</robot>
